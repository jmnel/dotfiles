[colors]
;background = ${xrdb:color0:#222}
background = #b02f343f
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #8a8a8a
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:DP-2}
width = 100%
height = 60
#offset-x = 1%
#offset-y = 1%
#radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

