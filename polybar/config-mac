[module/cputemp]
type = custom/script
exec = echo `sensors -A | grep -oP 'Core.+?  \+\K\d+' | awk '{k+=$1}END{print k/NR}'`°
interval = 10
format-underline = #F9A825
format-foreground = ${colors.foreground}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

